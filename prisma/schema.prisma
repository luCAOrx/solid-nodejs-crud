// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  COMMON
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id
  name         String
  job          String
  email        String         @unique
  password     String
  read_time    BigInt
  role         Role
  created_at   DateTime       @default(now())
  updated_at   DateTime?
  RefreshToken RefreshToken[]

  @@map("user")
}

model RefreshToken {
  id         String   @id
  expires_in Int
  user_id    String   @unique
  created_at DateTime @default(now())

  user User @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@map("refresh-token")
}
